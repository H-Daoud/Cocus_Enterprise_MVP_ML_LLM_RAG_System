# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cocus_mvp
REDIS_URL=redis://localhost:6379/0

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# LLM Provider Configuration
# Options: openai, gemini, mock
LLM_PROVIDER=gemini

# Google Gemini API Key (FREE tier available!)
# Get your key from: https://makersuite.google.com/app/apikey
# TODO: Replace with your actual Gemini API key
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# OpenAI API Key (Alternative - if you prefer OpenAI)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# AWS (for DVC and S3) - Optional
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Application
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# GDPR
DATA_RETENTION_DAYS=90
ENABLE_AUDIT_LOGGING=true

# EU AI Act
AI_SYSTEM_RISK_LEVEL=high
ENABLE_HUMAN_OVERSIGHT=true
