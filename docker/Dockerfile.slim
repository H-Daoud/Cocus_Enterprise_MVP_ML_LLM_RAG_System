# ============================================================================
# ULTRA-SLIM Dockerfile - Absolute Minimum Size
# ============================================================================
# Target: ~150-250 MB
# Trade-off: Embedding model downloads on first run (adds ~30s startup time)
# ============================================================================

FROM python:3.11-alpine

WORKDIR /app

# Install minimal runtime dependencies
RUN apk add --no-cache curl gcc musl-dev g++ libffi-dev

# Install only essential Python packages
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    langchain==0.1.0 \
    langchain-openai==0.0.2 \
    langchain-chroma==0.1.0 \
    langchain-huggingface==0.0.1 \
    python-dotenv==1.0.0 \
    pydantic==2.5.0

# Remove build dependencies to save space
RUN apk del gcc musl-dev g++ libffi-dev

# Copy only application code
COPY src/ ./src/
COPY chat-ui.html .

# Create directories
RUN mkdir -p data/raw data/vectorstore logs

# Environment
ENV PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    HF_HOME=/tmp/.cache/huggingface

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/api/health || exit 1

CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
